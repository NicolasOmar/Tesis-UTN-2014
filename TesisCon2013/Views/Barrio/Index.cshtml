@{
    ViewBag.Title = "Administracion | Busqueda de Barrios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var UsuarioLog = Session["UsuarioLog"] as TesisCon2013.Models.Usuarios;
    var mensaje = TempData["mensaje"] as string;
}

@if (mensaje != null)
{<div id="msj">@mensaje</div>}

@if (UsuarioLog != null && UsuarioLog.idRol == 1)
{
    <div class="container center_div">
        <div class="row">
            <form action="@Url.Action("filtrarBarrio", "Barrio")" method="get" class="form-horizontal" role="form">
                <fieldset>
                    <legend class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">Buscar Barrio por:</legend>

                    <div class="form-group">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-italic"></span> Nombre
                            </div>
                            <input id="txtNomB" class="form-control" type="text" name="txtBarrio" autofocus="true" />
                        </div>
                    </div>
                </fieldset>

                <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
                    <div class="btn-group botonera">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> Buscar</button>
                        <button type="button" onclick="location.href='@Url.Action("RegistrarBarrio")'" class="btn btn-success" title="Registrar nuevo Barrio"><span class="glyphicon glyphicon-plus"></span> Barrio</button>
                        <button type="button" onclick="location.href='@Url.Action("Index", "Usuario")'" class="btn btn-info" title="Volver al Listado de Usuarios"><span class="glyphicon glyphicon-repeat"></span> Volver</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
else
{ Response.Redirect(Url.Action("Index", "Home")); }
